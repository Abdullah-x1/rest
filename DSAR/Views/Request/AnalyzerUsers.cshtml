@model IEnumerable<DSAR.ViewModels.CaseStudyViewModel>

<link rel="stylesheet" href="~/css/analyzer.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;700&display=swap" rel="stylesheet">

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <title>اختيار المحلل</title>
   
</head>
<body>
    <div class="container">
        <h2>اختيار المحلل</h2>

        <table>
            <thead>
                <tr>
                    <th>المحلل</th>
                    <th>اسم المحلل</th>

                    <th>اختيار</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var analyzer in Model)
                {
                    <tr>
                        <td>@analyzer.UserId</td>
                        <td>@analyzer.FirstName</td>

                        <td>
                            <a asp-action="ConfirmAnalyzer"
                               asp-controller="Request"
                               asp-route-requestId="@analyzer.RequestId"
                               asp-route-userId="@analyzer.Id"
                               class="btn">
                                اختيار
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        @if (TempData["Success"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'نجاح',
                    text: '@Html.Raw(TempData["Success"])',
                    confirmButtonText: 'حسناً'
                });
            </text>
        }
    </script>


</body>
</html>
