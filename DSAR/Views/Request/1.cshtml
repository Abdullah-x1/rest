@model DSAR.ViewModels.RequestViewModel

<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <title>Authorization Contacts</title>
    <link rel="stylesheet" href="~/css/AuthorizationContacts.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/form-handler.js" asp-append-version="true"></script>
    <script src="~/js/step-progress.js" asp-append-version="true"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>

    <div class="step-progress-container" data-current-step="5">
        <div class="step" data-step="1">
            <div class="circle"><i class="bi bi-info-circle"></i></div>
            <div class="label">مقدمة عن الخدمة</div>
        </div>
        <div class="step" data-step="2">
            <div class="circle"><i class="bi bi-clipboard-check"></i></div>
            <div class="label">معلومات أولية عن الخدمة</div>
        </div>
        <div class="step" data-step="3">
            <div class="circle"><i class="bi bi-list-ul"></i></div>
            <div class="label">معلومات تفصيلية عن الخدمة</div>
        </div>
        <div class="step" data-step="4">
            <div class="circle"><i class="bi bi-person-check"></i></div>
            <div class="label">صلاحيات معتمديّ الخدمة</div>
        </div>
        <div class="step" data-step="5">
            <div class="circle"><i class="bi bi-person-lines-fill"></i></div>
            <div class="label">معلومات التواصل لأصحاب الصلاحية</div>
        </div>
    </div>

    <form asp-action="AuthorizationContacts" method="post" id="form" class="form-container" enctype="multipart/form-data">
        <h3 style="text-align: center; margin-bottom: 20px;">معلومات التواصل لأصحاب الصلاحية</h3>

        <div class="table-container">
            <table id="fieldsTable">
                <thead>
                    <tr>
                        <th>المدينة</th>
                        <th>ممثل القطاع</th>
                        <th>المنصب</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @for (int i = 0; i < Model.AuthorizedContacts.Count; i++)
                    {
                        <tr>
                            <td><input name="AuthorizationContacts[@i].City" value="@Model.AuthorizedContacts [i].City" class="form-control" /></td>
                            <td><input name="AuthorizationContacts[@i].RepresentativeName" value="@Model.AuthorizedContacts [i].RepresentativeName" class="form-control" /></td>
                            <td><input name="AuthorizationContacts[@i].RepresentativePosition" value="@Model.AuthorizedContacts [i].RepresentativePosition" class="form-control" /></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="button-container">
            <button type="button" class="btn btn-success" onclick="addRow()">+ إضافة صف</button>
            <button type="button" class="btn btn-danger" onclick="deleteLastRow()">حذف صف</button>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <div class="button-footer">
                <button type="button" class="btn-prev" onclick="location.href='@Url.Action("StepDescriptions", "Request")'">السابق</button>
            </div>
            <div class="d-flex gap-2">
                @if (!User.IsInRole("ApplicationManager"))
                {
                    <div class="button-footer">
                        <div class="btn-group-custom">
                            <button type="button" id="saveButton" class="btn-save" name="action" value="save">
                                <i class="bi bi-save me-2"></i> حفظ
                            </button>

                            <button type="submit" class="btn-next" name="action" value="next">التالي</button>
                        </div>
                    </div>
                }

                @if (User.IsInRole("ApplicationManager"))
                {
                    <a asp-action="AnalyzerUsers" asp-route-requestId="@Model.FormId" class="btn btn-info">Choose Analyzer</a>
                }
            </div>
        </div>
    </form>

    <style>
        .btn-danger {
            background-color: #dc3545;
            color: white;
        }
    </style>

    <script>
        let index = document.querySelectorAll("#tableBody tr").length;
        function addRow() {
            const tableBody = document.getElementById("tableBody");
            if (tableBody.rows.length < 20) {
                const row = document.createElement("tr");
                row.innerHTML = `
                    <td><input name="AuthorizationContacts[${index}].City" class="form-control" /></td>
                    <td><input name="AuthorizationContacts[${index}].RepresentativeName" class="form-control" /></td>
                    <td><input name="AuthorizationContacts[${index}].RepresentativePosition" class="form-control" /></td>
                `;
                tableBody.appendChild(row);
                index++;
            }

            if (tableBody.rows.length >= 20) {
                document.querySelector(".btn-success").disabled = true;
            }
        }

        function deleteLastRow() {
            const tableBody = document.getElementById("tableBody");
            if (tableBody.rows.length > 1) {
                tableBody.deleteRow(tableBody.rows.length - 1);
                index--;
                if (tableBody.rows.length < 20) {
                    document.querySelector(".btn-success").disabled = false;
                }
            }
        }
    </script>

    <script>
        setupAjaxSave('#form', '#saveButton', '@Url.Action("AuthorizationContacts", "Request")');
    </script>

</body>
</html>
