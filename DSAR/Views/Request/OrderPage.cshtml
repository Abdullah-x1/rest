@model IEnumerable<DSAR.ViewModels.RequestViewModel>
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>الطلبات</title>
    <style>
        body {
            margin: 0;
            font-family: sans-serif;
            background: linear-gradient(to right, #7ec6e3, #b389d5);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 1288px;
            height: 729px;
            background-color: white;
            border-radius: 10px;
            padding: 40px;
            box-sizing: border-box;
            position: relative;
        }

        h1 {
            text-align: center;
            margin-top: 0;
            margin-bottom: 40px;
            font-size: 28px;
            color: #333;
        }

        .tabs {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .tab {
            background: #e6e6e6;
            padding: 10px 20px;
            border-radius: 20px;
            margin: 0 5px;
            cursor: pointer;
            font-size: 14px;
            color: #333;
        }

            .tab.active {
                background: white;
                border: 1px solid #ccc;
                font-weight: bold;
            }

        .search-icon {
            position: absolute;
            top: 80px;
            right: 60px;
            font-size: 20px;
            cursor: pointer;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border-bottom: 1px solid #ccc;
            text-align: right;
            padding: 12px;
            font-size: 14px;
        }

        th {
            color: #555;
            font-weight: bold;
        }

        td {
            height: 40px;
            color: #333;
        }

        .arrow {
            position: absolute;
            cursor: pointer;
        }

        .arrow-left {
            left: 20px;
            bottom: 20px;
        }

        .arrow-right {
            right: 20px;
            bottom: 20px;
        }

        .arrow img {
            width: 32px;
            height: 32px;
            filter: brightness(0) saturate(100%) invert(52%) sepia(88%) saturate(350%) hue-rotate(120deg);
        }

        .btn {
            padding: 6px 12px;
            text-decoration: none;
            border-radius: 4px;
            color: white;
            margin: 0 4px;
        }

        .btn-success {
            background-color: #28a745;
        }

        .btn-danger {
            background-color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>الطلبات</h1>

      
        <div class="search-icon"></div>

        <table>
            <thead>
                <tr>
                    <th>رقم الطلب</th>
                
                    <th>القسم</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="ViewSubmission" asp-route-levelId="@request.LevelId" asp-route-id="@request.RequestId">
                                @request.RequestNumber
                            </a>
                        </td>
                        <td>@request.DepartmentName</td>
                       
                    </tr>
                }
            </tbody>
        </table>

        <!-- Arrows -->
     
    </div>
</body>
</html>
